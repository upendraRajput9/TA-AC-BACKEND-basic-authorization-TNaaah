<% include partials/header %>
    <section class="form-section">
       
    <form class="form" action="/articles/<%=article._id%>/update" method="POST">
        <h2>Add Article</h2>
    <input value="<%=article.title%>" type="text" placeholder="Title" name="title">
    <textarea name="description" placeholder="Description" cols="30" rows="10"><%=article.description%></textarea>
    <input value="article.tags" type="text" placeholder="Tags" name="tags">
    <input class="submit" type="submit">
    </form>
</section>
    
<% include partials/footer %>